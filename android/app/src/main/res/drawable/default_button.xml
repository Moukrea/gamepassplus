<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused and pressed state -->
    <item android:state_focused="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00000000" />
                    <stroke android:width="1.5dp" android:color="#FFFFFF" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/buttonPressed" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00000000" />
                    <stroke android:width="1.5dp" android:color="#FFFFFF" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/buttonFocused" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <layer-list>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#00000000" />
                <corners android:radius="10dp" />
            </shape>
        </item>
        <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
            <shape android:shape="rectangle">
                <solid android:color="?attr/buttonPressed" />
                <corners android:radius="5dp" />
            </shape>
        </item>
        </layer-list>
    </item>

    <!-- Default State -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#00000000" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/buttonDefault" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
